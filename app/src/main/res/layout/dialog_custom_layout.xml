<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dialogViewModel"
            type="com.dp.dell.workshopmodule.viewmodel.CustomDialogViewModel"/>
    </data>
<android.support.v7.widget.CardView
android:layout_width="@dimen/dp270w"
android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp6h"
    android:id="@+id/cv_parent">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="@{dialogViewModel.progressBar}"/>
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20.2sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/colorBlue"
        android:layout_marginStart="@dimen/dp22h"
        android:layout_marginTop="@dimen/dp11h"
        android:lineSpacingExtra="8sp"
        android:text="@{dialogViewModel.dialogTitle}"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        />



     <android.support.v7.widget.RecyclerView
         android:id="@+id/rv_data"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp200h"
         android:layout_marginTop="@dimen/dp6h"
         tools:listitem="@layout/item_custom_layout"
         bind:data="@{dialogViewModel.data}"
         android:layout_below="@+id/tv_dialog_title"
         android:layout_marginEnd="@dimen/dp26h"
         android:layout_marginStart="@dimen/dp26h"
         />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rv_data"
    android:weightSum="2">

    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/dp50h"
        android:layout_weight="1"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:onClick="@{dialogViewModel::cancelDialog}"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/dp50h"
        android:layout_weight="1"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:onClick="@{dialogViewModel::submitDialog}"
        />
</LinearLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>
</layout>