<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp88h"
    android:layout_height="@dimen/dp88h"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/dp10h"
    android:layout_marginStart="@dimen/dp10h"
    android:layout_marginBottom="@dimen/dp7h"
    app:cardCornerRadius="@dimen/dp6h">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greencolor">



        <ImageView
            android:id="@+id/iv_urgent_request_title"
            android:layout_width="@dimen/dp7h"
            android:layout_height="@dimen/dp7h"
            android:src="@mipmap/ic_wrench"
            android:layout_marginStart="@dimen/dp3w"
            android:layout_marginTop="@dimen/dp12h"
            />

        <TextView
            android:id="@+id/tv_urgent_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/darkcolor"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-3.8sp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/iv_urgent_request_title"
            android:layout_below="@+id/iv_request"
            android:text=""
            android:layout_marginTop="@dimen/dp9h"
            android:layout_marginStart="@dimen/dp15h"
            android:layout_marginEnd="@dimen/dp3h"
            />


        <ImageView
            android:id="@+id/iv_urgent_car_type"
            android:layout_width="@dimen/dp7h"
            android:layout_height="@dimen/dp3h"
            android:src="@mipmap/ic_sedan"
            android:layout_below="@+id/tv_urgent_request_title"
            android:layout_marginStart="@dimen/dp3w"
            android:layout_marginTop="@dimen/dp13h"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_urgent_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp7_5"
            android:fontFamily="sans-serif-black"
            android:textStyle="normal"
            android:textColor="@color/colorwhite"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-3.8sp"
            android:layout_toEndOf="@+id/iv_urgent_car_type"
            android:layout_below="@+id/tv_urgent_request_title"
            android:text=""
            android:layout_marginTop="@dimen/dp11h"
            android:layout_marginStart="@dimen/dp15h"
            android:layout_marginEnd="@dimen/dp3h"
            />


        <ImageView
            android:id="@+id/iv_urgent_request_location"
            android:layout_width="@dimen/dp5w"
            android:layout_height="@dimen/dp7h"
            android:src="@mipmap/ic_placeholder_outline"
            android:layout_below="@+id/tv_urgent_car_type"
            android:layout_marginStart="@dimen/dp3w"
            android:layout_marginTop="@dimen/dp13h"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_urgent_request_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp5_5"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/colorwhite"

            android:text=""
            android:layout_below="@+id/tv_urgent_car_type"
            android:layout_toEndOf="@+id/iv_urgent_request_location"
            android:layout_marginTop="@dimen/dp11h"
            android:layout_marginStart="@dimen/dp15h"
            android:layout_marginEnd="@dimen/dp3h"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="16.5sp"
            />

        <ImageView
            android:id="@+id/iv_urgent_calendar"
            android:layout_width="@dimen/dp7h"
            android:layout_height="@dimen/dp8h"
            android:src="@mipmap/ic_calendar"
            android:layout_below="@+id/tv_urgent_request_location"
            android:layout_marginStart="@dimen/dp3w"
            android:layout_marginTop="@dimen/dp13h"


            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp5_5"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/colorwhite"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="11.2sp"
            android:text=""
            android:layout_below="@+id/tv_urgent_request_location"
            android:layout_toEndOf="@+id/iv_urgent_calendar"
            android:layout_marginTop="@dimen/dp11h"
            android:layout_marginStart="@dimen/dp15h"
            android:layout_marginEnd="@dimen/dp3h"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>