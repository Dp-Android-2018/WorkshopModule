<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp291h"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/dp17h"
    android:layout_marginStart="@dimen/dp17h"
    app:cardCornerRadius="@dimen/dp6h">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite">


            <TextView
                android:id="@+id/tv_select_countries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/graycolor"
                android:text="@string/select_countries"
                android:layout_marginTop="@dimen/dp10h"

                />
<RelativeLayout
    android:id="@+id/rl_range_1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp36h"
    android:layout_below="@+id/tv_select_countries"
    android:layout_marginTop="@dimen/dp29w">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16.7sp"
        android:textColor="@color/dimgray"
        android:lineSpacingExtra="-8.7sp"
       android:text="0 : 99"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1h"
            android:background="@color/graycolor"
            android:layout_below="@+id/rl_range_1"/>


        <RelativeLayout

            android:id="@+id/rl_range_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp36h"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/dp10w">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:textColor="@color/dimgray"
                android:lineSpacingExtra="-8.7sp"
                android:text="100 : 999"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1h"
            android:background="@color/graycolor"
            android:layout_below="@+id/rl_range_2"/>


        <RelativeLayout
            android:id="@+id/rl_range_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp36h"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/dp10w">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:textColor="@color/dimgray"
                android:lineSpacingExtra="-8.7sp"
                android:text="1000 : 9999"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1h"
            android:background="@color/graycolor"
            android:layout_below="@+id/rl_range_3"/>



        <RelativeLayout
            android:id="@+id/rl_range_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp36h"
            android:layout_below="@+id/view3"
            android:layout_marginTop="@dimen/dp10w">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.7sp"
                android:textColor="@color/dimgray"
                android:lineSpacingExtra="-8.7sp"
                android:text="10000 : 99999"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/dp171w"
            android:layout_height="@dimen/dp39w"
            android:layout_marginTop="@dimen/dp28w"
            android:layout_below="@+id/rl_range_4"
            android:layout_marginBottom="@dimen/dp16h"
            android:background="@drawable/button_advertisment_background"
            android:layout_centerHorizontal="true"
            android:text="@string/ok"
            android:textColor="@color/colorwhite"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textAllCaps="false"



            />

    </RelativeLayout>
</android.support.v7.widget.CardView>