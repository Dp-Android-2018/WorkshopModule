<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp40w"
        android:layout_marginEnd="@dimen/dp40w"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/advertisement_title_color"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="0.7sp"
            android:layout_alignParentStart="true"
            android:text="Your advertising has send to our Customer"
            android:layout_marginTop="@dimen/dp50w"
            />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/advertisement_title_color"
            android:letterSpacing="0.01"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0.7sp"
            android:text="wait a notification from us tell you"
            android:layout_below="@+id/tv_1"
            />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/advertisement_title_color"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="0.7sp"
            android:text="that your advertising accepted"
            android:layout_below="@+id/tv_2"
            />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_below="@+id/tv_3"
            android:textColor="@color/advertisement_title_color"
            android:letterSpacing="0.01"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0.7sp"
            android:text="and publish on the Find and Fix application"
            />

        <ImageView
            android:id="@+id/iv_find_fix_logo"
            android:layout_width="@dimen/dp244h"
            android:layout_height="@dimen/dp206w"
            android:layout_below="@+id/tv_4"
            android:layout_marginTop="@dimen/dp45h"/>

    <Button
        android:id="@+id/btn_add_adv"
        android:layout_width="@dimen/dp132w"
        android:layout_below="@+id/iv_find_fix_logo"
        android:layout_height="@dimen/dp34w"
        android:layout_marginTop="@dimen/dp6h"

        android:layout_marginBottom="@dimen/dp36h"
        android:background="@drawable/button_advertisment_background"
        android:layout_centerHorizontal="true"
        android:text="@string/add_another_ads"
        android:textColor="@color/colorwhite"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textAllCaps="false"
        />
</RelativeLayout>
</RelativeLayout>