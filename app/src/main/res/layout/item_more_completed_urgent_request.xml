<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp140h"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/dp13w"
    android:layout_marginStart="@dimen/dp13w"
    android:layout_marginTop="@dimen/dp12h"
    android:background="@color/colorwhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/redColor">



        <ImageView
            android:id="@+id/iv_urgent_request_title"
            android:layout_width="@dimen/dp14h"
            android:layout_height="@dimen/dp14h"
            android:src="@mipmap/ic_wrench"
            android:layout_marginStart="@dimen/dp8w"
            android:layout_marginTop="@dimen/dp16h"
            />

        <TextView
            android:id="@+id/tv_urgent_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp17"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/darkcolor"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-3.8sp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/iv_urgent_request_title"
            android:layout_below="@+id/iv_request"
            android:text=" "
            android:layout_marginTop="@dimen/dp16w"
            android:layout_marginStart="@dimen/dp12h"
            android:layout_marginEnd="@dimen/dp3h"
            />


        <ImageView
            android:id="@+id/iv_urgent_car_type"
            android:layout_width="@dimen/dp14h"
            android:layout_height="@dimen/dp7h"
            android:src="@mipmap/ic_sedan"
            android:layout_below="@+id/tv_urgent_request_title"
            android:layout_marginStart="@dimen/dp12h"
            android:layout_marginTop="@dimen/dp25h"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_urgent_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:fontFamily="sans-serif-black"
            android:textStyle="normal"
            android:textColor="@color/colorwhite"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-3.8sp"
            android:layout_toEndOf="@+id/iv_urgent_car_type"
            android:layout_below="@+id/tv_urgent_request_title"
            android:text=""
            android:layout_marginTop="@dimen/dp16w"
            android:layout_marginStart="@dimen/dp12h"
            android:layout_marginEnd="@dimen/dp3h"
            />


        <ImageView
            android:id="@+id/iv_urgent_request_location"
            android:layout_width="@dimen/dp9w"
            android:layout_height="@dimen/dp14h"
            android:src="@mipmap/ic_placeholder_outline"
            android:layout_below="@+id/tv_urgent_car_type"
            android:layout_marginStart="@dimen/dp12h"
            android:layout_marginTop="@dimen/dp25h"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_urgent_request_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/colorwhite"

            android:text=""
            android:layout_below="@+id/tv_urgent_car_type"
            android:layout_toEndOf="@+id/iv_urgent_request_location"
            android:layout_marginTop="@dimen/dp23w"
            android:layout_marginStart="@dimen/dp12h"
            android:layout_marginEnd="@dimen/dp3h"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="16.5sp"
            />

        <ImageView
            android:id="@+id/iv_urgent_calendar"
            android:layout_width="@dimen/dp13h"
            android:layout_height="@dimen/dp14h"
            android:src="@mipmap/ic_calendar"
            android:layout_below="@+id/tv_urgent_request_location"
            android:layout_marginStart="@dimen/dp12h"
            android:layout_marginTop="@dimen/dp25h"

            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_time_urgent_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/colorwhite"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="11.2sp"
            android:text=""
            android:layout_below="@+id/tv_urgent_request_location"
            android:layout_toEndOf="@+id/iv_urgent_calendar"
            android:layout_marginTop="@dimen/dp23w"
            android:layout_marginStart="@dimen/dp12h"
            android:layout_marginEnd="@dimen/dp3h"
            android:layout_marginBottom="@dimen/dp18h"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp8h"
            android:background="@color/blackcolor"
            android:layout_below="@+id/tv_time_urgent_request"
            android:visibility="gone"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>