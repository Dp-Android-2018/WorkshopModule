<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorwhite" android:startColor="@color/colorwhite"  />

                    <stroke android:width="2dp" android:color="@color/colorPrimary" />
                    <corners android:radius="@dimen/dp15h"/>

                    <padding android:bottom="@dimen/dp6h" android:left="@dimen/dp12h" android:right="@dimen/dp12h" android:top="@dimen/dp12h" />
                </shape>
            </item>

            <item android:end="@dimen/dp6h">

                <bitmap android:gravity="center_vertical|end" android:src="@mipmap/ic_down_arrow" />

            </item>

        </layer-list>

    </item>

</selector>